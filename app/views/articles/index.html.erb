<h1> All Articles </h1>

<table>#articles
  <thead>
    <tr>
      <th> Article Title </th>
      <th> Release Date </th>
      <th> More Info </th>
    </tr>
  </thead>
  <tbody>
    <% @articles.each do |article| %>
      <tr>
	<td>
	  <%= link_to article.title, article_path(article) %>
	</td>
	<td>
	  <%= article.title %>
	</td>
      </tr>
      <% end %>
  </tbody>
</table>
<%= link_to 'Add new article', new_article_path %>
